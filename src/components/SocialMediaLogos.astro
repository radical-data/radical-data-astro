---
interface Props {
  colorMode?: string;
}

const { colorMode = 'black' } = Astro.props;

import instagramLogo from '@assets/media/instagram.svg';
import twitterLogo from '@assets/media/twitter.svg';
import youtubeLogo from '@assets/media/youtube.svg';
import linkedinLogo from '@assets/media/linkedin.svg';
import tiktokLogo from '@assets/media/tiktok.svg';
import githubLogo from '@assets/media/github.svg';

import socialMediaLinks from '@assets/data/social-media-links.json';
---

<ul class="social-media-icons" class={colorMode}>
  <li>
    <a href={socialMediaLinks.instagram}
      ><img class={colorMode} src={instagramLogo} alt="Instagram logo" />
    </a>
  </li>
  <li>
    <a href={socialMediaLinks.linkedin}
      ><img class={colorMode} src={linkedinLogo} alt="LinkedIn logo" />
    </a>
  </li>
  <li>
    <a href={socialMediaLinks.tiktok}
      ><img class={colorMode} src={tiktokLogo} alt="TikTok logo" />
    </a>
  </li>
  <li>
    <a href={socialMediaLinks.github}
      ><img class={colorMode} src={githubLogo} alt="GitHub logo" />
    </a>
  </li>
  <li>
    <a href={socialMediaLinks.twitter}
      ><img class={colorMode} src={twitterLogo} alt="Twitter logo" />
    </a>
  </li>
  <li>
    <a href={socialMediaLinks.youtube}
      ><img class={colorMode} src={youtubeLogo} alt="YouTube logo" />
    </a>
  </li>
</ul>
<style>
  ul {
    list-style: none;
    list-style-type: none;
  }

  ul {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    width: clamp(50%, 20em, 100%);
    margin: 0;
    padding: 0;
  }
  li {
    display: block;
    flex: 0 1 auto;
    list-style-type: none;
  }

  .social-media-icons {
    display: flex;
    justify-self: center;
    align-items: center;
    align-self: center;
  }

  li {
    width: 10%;
  }

  img {
    max-width: 100%;
    width: 50rem;
  }

  .white {
    filter: invert(100%);
  }

  .social-media-icons img {
    animation-name: rotation;
    /* animation-duration: 0.016666666666s; */
    animation-duration: 150s;
    /* animation-iteration-count: infinite; */
    animation-fill-mode: forwards;
    animation-timing-function: linear;
  }

  @keyframes rotation {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(180deg);
    }
  }

  @keyframes rotation-backwards {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-180deg);
    }
  }

  .social-media-icons > li:nth-child(1) > * > img {
    animation-duration: 150s;
  }

  .social-media-icons > li:nth-child(2) > * > img {
    animation-duration: 100s;
    animation-name: rotation-backwards;
  }

  .social-media-icons > li:nth-child(3) > * > img {
    animation-duration: 600s;
  }

  .social-media-icons > li:nth-child(4) > * > img {
    animation-duration: 120s;
  }

  .social-media-icons > li:nth-child(5) > * > img {
    animation-duration: 185s;
    animation-name: rotation-backwards;
  }

  .social-media-icons > li:nth-child(6) > * > img {
    animation-duration: 300s;
  }

  .social-media-icons > li:nth-child(7) > * > img {
    animation-duration: 700s;
    animation-name: rotation-backwards;
  }
</style>
