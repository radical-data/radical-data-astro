---
export interface Props {
  title: string;
  body: string;
  href: string;
  type: string;
  imgLink?: string;
  pretitle?: string;
  posttitle?: string;
}

const { href, pretitle, posttitle, title, body, type, imgLink } = Astro.props;
---

<div class={`link-card grid-item ${type}`}>
  <a href={href}>
    <h2>
      <span class="pretitle">{pretitle}</span>
      {title}
      <span class="posttitle">{posttitle}</span>
    </h2>
    <p>
      {body}
    </p>
    <img src={imgLink} />
  </a>
</div>
<style>
  .link-card {
    display: flex;
    border: 4px solid var(--lighter-grey);
    margin: 2vw;
    width: 40%;
  }

  .link-card:where(.article, , .project, .archive) {
    border-radius: 1.2rem;
  }

  .link-card:where(.article, .project, .archive)::before {
    content: "";
    position: absolute;
    margin-top: -45px;
    margin-left: -45px;
    width: 90px;
    height: 90px;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    transition: background-color 0.5s;
  }

  .link-card:where(.information) {
    border-radius: 0rem;
  }

  .link-card.article::before {
    background-color: var(--rd-yellow);
  }

  .link-card.project::before {
    background-color: var(--rd-light-blue);
  }

  .link-card.archive::before {
    background-color: var(--rd-red);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #000;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.7rem;
    line-height: 90%;
  }
  h2 :where(.pretitle, .posttitle) {
    font-size: 0.9rem;
    display: block;
  }
  p {
    font-family: "LindenHill";
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within)::before {
    background-color: var(--off-white);
    border: 4px solid var(--lighter-grey);
    transition: background-color 0.5s;
    vertical-align: middle;
    box-sizing: border-box;
  }

  img {
    max-width: 100%;
    width: 50rem;
    height: auto;
    border-radius: 1.2rem;
  }
</style>
