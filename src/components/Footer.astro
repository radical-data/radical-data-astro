---
import radicalDataLogo from "@assets/images/radical-data-logo.svg";
import SocialMediaLogos from "./SocialMediaLogos.astro";
import { Link } from "astro-link";
---

<footer>
  <div class="container">
    <section class="one">
      <h2>Think we could make something together?</h2>
      <hr />
    </section>
    <section class="two">
      <p class="email">
        Email:<br />
        <Link
          class="address"
          href={"mailto:hi@radicaldata.org"}
          title={"Say hi!"}
          externalInNewTab={true}
        >
          hi@radicaldata.org
        </Link>
      </p>
    </section>
    <section class="three">
      <SocialMediaLogos colorMode="white" />
    </section>
    <section class="four">
      <div class="description">
        <img class="logo" src={radicalDataLogo} alt="Radical Data logo" />
        <p>
          Radical Data is a collective using data and building tools for
          resistance and alternative futures.
        </p>
      </div>
    </section>
    <div class="five">
      <h3 class="studio">Studio</h3>
      <ul>
        <li>Our Projects</li>
        <li>Work with Us</li>
        <li>Resources</li>
      </ul>
    </div>
    <div class="six">
      <h3 class="research">Research</h3>
      <ul>
        <li>Articles</li>
        <li>Interviews</li>
        <li>Bookshelf</li>
        <li>Organisations</li>
      </ul>
    </div>
    <div class="seven">
      <h3>Inside Radical Data</h3>
      <ul>
        <li>About</li>
        <li>Team</li>
        <li>Events</li>
        <li>Careers</li>
        <li>Contact Us</li>
      </ul>
    </div>
    <div class="eight">
      <small id="copyright">Â© 2022 Radical Data. All rights reserved.</small>
    </div>
  </div>
</footer>
<style>
  footer {
    background: linear-gradient(
      180deg,
      var(--rd-light-blue) 57.29%,
      var(--off-white) 100%
    );
    padding: 1em;
    font-size: 20px;
  }

  .container {
    display: grid;
    margin-inline: auto;
    max-width: min(40rem, 90vw);
    grid-template-columns: 1;
  }

  .four {
    grid-row-end: 8;
  }

  @media (min-width: 800px) {
    .container {
      grid-template-columns: repeat(6, 1fr);
      grid-auto-rows: minmax(100px, auto);
    }

    .one {
      grid-column: 1/7;
    }

    .two {
      grid-column: 1/4;
    }

    .three {
      grid-column: 4/7;
    }

    .four {
      grid-column: 1/3;
      grid-row: 4;
    }

    .five {
      grid-column: 1/2;
    }

    .six {
      grid-column: 3/4;
    }

    .seven {
      grid-column: 5/7;
    }

    .eight {
      grid-row: 5;
      grid-column: 1/7;
    }
  }

  @media (min-width: 1025px) {
    .container {
      grid-template-columns: repeat(6, 1fr);
      grid-auto-rows: minmax(100px, auto);
    }

    .one {
      grid-column: 1 / 7;
      grid-row: 1;
    }

    .two {
      grid-column: 1/3;
      grid-row: 2;
    }

    .three {
      grid-column: 4/6;
      grid-row: 2;
    }

    .four {
      grid-column: 1/3;
      grid-row: 3;
    }

    .five {
      grid-column: 4;
      grid-row: 3;
    }

    .six {
      grid-column: 5;
      grid-row: 3;
    }

    .seven {
      grid-column: 6;
      grid-row: 3;
    }

    .eight {
      grid-row: 4;
    }
  }

  .three,
  .eight {
    display: flex;
  }

  h2 {
    color: var(--off-white);
    font-size: 4rem;
    margin-block-start: 1rem;
    margin-block-end: 2rem;
    line-height: 95%;
  }

  /* h2::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    border-top: 3px solid var(--off-white);
  } */

  hr {
    border: 3px solid var(--off-white);
    width: 100%;
  }

  footer .back-to-top::before {
    content: "";
    border-top: 0.1em solid #000000;
    align-self: center;
  }
  footer .back-to-top {
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: 0.4em;
    /* justify-self: end; */
  }
  footer .back-to-top img {
    width: 1.4em;
  }

  footer img {
    width: 30%;
    justify-self: center;
  }

  #copyright {
    justify-self: center;
  }

  footer ul {
    list-style: none;
    list-style-type: none;
    margin: 0;
    padding: 1em 0;
  }

  .description {
    max-width: 35ch;
  }

  #copyright {
    margin: auto;
  }

  .email {
    font-family: Urbanist;
    font-weight: 700;
    color: var(--off-white);
  }

  p.email {
    font-size: 1.5vw;
  }

  .email > a {
    font-size: 3vw;
    /* font-size: minmax(2vw, 2rem); */
    text-decoration: none;
    color: var(--off-white);
  }
</style>
